---
const { title = 'Festival des films d’animation japonais' } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <header style="
      background: white;
      padding: 1rem 2rem;
      border-radius: 25px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3), 
                  0 6px 6px rgba(0, 0, 0, 0.2);
      max-width: 80%;
      margin: 1rem auto;
    ">
      <nav style="
        display: flex; 
        justify-content: center; 
        gap: 1.5rem;
      ">
        <a href="/" style="text-decoration: none; color: black; font-weight: bold; font-size: 1rem; transition: color 0.3s ease;">Accueil</a>
        <a href="/festival" style="text-decoration: none; color: black; font-weight: bold; font-size: 1rem; transition: color 0.3s ease;">Le Festival</a>
        <a href="/agenda" style="text-decoration: none; color: black; font-weight: bold; font-size: 1rem; transition: color 0.3s ease;">Agenda</a>
        <a href="/histoire" style="text-decoration: none; color: black; font-weight: bold; font-size: 1rem; transition: color 0.3s ease;">Histoire</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <!-- FOOTER -->
    <footer style="
      background: #383838;
      color: white;
      padding: 2rem 1rem;
      text-align: center;
      margin-top: 3rem;
    ">
      <div style="max-width: 1100px; margin: 0 auto;">
		<a href="/" style="text-decoration: none; color: white; font-weight: bold; font-size: 1rem; transition: color 0.3s ease;">Accueil</a>
        <a href="/festival" style="text-decoration: none; color: white; font-weight: bold; font-size: 1rem; transition: color 0.3s ease;">Le Festival</a>
        <a href="/agenda" style="text-decoration: none; color: white; font-weight: bold; font-size: 1rem; transition: color 0.3s ease;">Agenda</a>
        <a href="/histoire" style="text-decoration: none; color: white; font-weight: bold; font-size: 1rem; transition: color 0.3s ease;">Histoire</a>
        <p>&copy; 2025 Festival des Films d’Animation Japonais. Tous droits réservés.</p>
        <nav style="margin: 1.5rem 0;">
          <a href="/mentions-legales" style="color: white; text-decoration: none; margin: 0 1rem; font-size: 0.9rem;">Mentions légales</a>
          <a href="/contact" style="color: white; text-decoration: none; margin: 0 1rem; font-size: 0.9rem;">Contact</a>
          <a href="/faq" style="color: white; text-decoration: none; margin: 0 1rem; font-size: 0.9rem;">FAQ</a>
        </nav>
        
        <div style="margin-top: 1.5rem;">
          <a href="www.facebook.com" aria-label="Facebook" style="color: white; font-size: 1.5rem; margin: 0 0.5rem;">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="www.twitter.com" aria-label="Twitter" style="color: white; font-size: 1.5rem; margin: 0 0.5rem;">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="www.instagram.com" aria-label="Instagram" style="color: white; font-size: 1.5rem; margin: 0 0.5rem;">
            <i class="fab fa-instagram"></i>
          </a>
        </div>
      </div>
    </footer>

  </body>
</html>

<style>
  body {
    font-family: 'Helvetica', sans-serif;
    font-weight: 400;
    color: #333; 
    line-height: 1.6;
  }

  h1, h2, h3 {
    font-weight: 600; 
  }

  small {
    font-weight: 300; 
  }

  footer a:hover {
    text-decoration: underline;
    color: #FFB81C;
  }

  footer .social-icons a:hover {
    transform: scale(1.1);
  }
</style>
